{
  "name": "serverless-nextjs-plugin",
  "version": "1.0.0",
  "description": "A serverless plugin for nextjs 8 serverless target",
  "main": "index.js",
  "scripts": {
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test": "jest"
  },
  "author": "Daniel Conde Marin <danielconde9@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "coveralls": "^3.0.3",
    "jest": "^24.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danielcondemarin/serverless-nextjs-plugin.git"
  },
  "dependencies": {
    "@mapbox/s3urls": "^1.5.3",
    "chalk": "^2.4.2",
    "js-yaml": "^3.12.1",
    "klaw": "^3.0.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.1",
    "mime": "^2.4.0",
    "next": "^8.0.3",
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js",
      "lib/**/*.js",
      "utils/**/*.js"
    ],
    "coverageDirectory": "<rootDir>/coverage/",
    "testPathIgnorePatterns": [
      "<rootDir>/examples/",
      "<rootDir>/node_modules/"
    ]
  }
}
